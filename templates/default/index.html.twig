<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>{{ site_name }}</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous"/>
        <link rel="stylesheet" href="{{ asset('build/app.css') }}"/>
    </head>
    <body>
        <div class="container">
            <h1>{{ site_name }}</h1>

            <a class="btn btn-primary btn-block" href="{{ path('easyadmin') }}">{{ 'Administration'|trans }}</a>
            <a class="btn btn-secondary btn-block" href="{{ path('api_doc') }}">{{ 'API documentation'|trans }}</a>

            {% set app_configuration = {
                data_url: path('api_items_get_collection')
                } %}
            <div id="app" data-configuration="{{ app_configuration|json_encode }}"></div>
            <script src="{{ asset('build/app.js') }}"></script>
        </div>
    </body>
</html>
